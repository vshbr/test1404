<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="test1404.MainWindow"
		x:CompileBindings="False"
		WindowStartupLocation="CenterOwner"
        Title="Список">
	<Grid RowDefinitions="auto, *,auto">

		<StackPanel Margin="10" Orientation="Horizontal" DockPanel.Dock="Top">
			<StackPanel  Orientation="Horizontal" HorizontalAlignment="Left" Spacing="10" VerticalAlignment="Center">
				<TextBlock Text="Список" VerticalAlignment="Center"/>
				<TextBlock x:Name="Count" VerticalAlignment="Center"/>

				<TextBox Width="200" Watermark="Поиск" x:Name="Find"/>

				<ComboBox x:Name="Sort" PlaceholderText="Сортировка">
					<ComboBoxItem>
						Без сортировки
					</ComboBoxItem>
					<ComboBoxItem>
						ФИО
					</ComboBoxItem>
					<ComboBoxItem>
						Последний визит
					</ComboBoxItem>
					<ComboBoxItem>
						Количество посещений
					</ComboBoxItem>
				</ComboBox>

				<ComboBox x:Name="Filter" />


			</StackPanel>
		</StackPanel>
		
		
		
		
		
		
		<ListBox Name="PartnerListBox"                  
				 Grid.Row="1"                  
				 Margin="10"                 
				 DoubleTapped="ListBox_DoubleTapped">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border                        
						BorderThickness="1"			   
						BorderBrush="Black"                        
						Padding="10">
						<Grid ColumnDefinitions="*,auto">
							<StackPanel Grid.Column="0" Spacing="10">
								<TextBlock>
									<TextBlock.Text>
										<MultiBinding StringFormat="{}{0} | {1}">
											<Binding Path="Model"/>
											<Binding Path="Photo"/>
										</MultiBinding>
									</TextBlock.Text>
								</TextBlock>
								<TextBlock Text="{Binding Dirname}"/>
								<TextBlock Text="{Binding Phone}"/>
								<TextBlock Text="{Binding Rating,StringFormat='{}Рейтинг: {0}'}"/>
							</StackPanel>
							<TextBlock Grid.Column="1" Text="{Binding Discount,StringFormat='{}{0}%'}"/>
							<Image Grid.Column="1" MaxHeight="50" Source="avares://test1404/assets/iphoone13.jpg"></Image>
						</Grid>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<Button Grid.Row="2"                
				Margin="10"                
				HorizontalAlignment="Left"                
				Content="История"                
				Click="Button_Click_History"/>
		<Button Grid.Row="2"                
				Margin="10"                
				Content="Добавить"                
				HorizontalAlignment="Right"                
				Click="Button_Click_Add"/>
		<TextBlock Grid.Row="2"                   
				   Name="ErrorTextBlock"                   
				   HorizontalAlignment="Center"/>
	</Grid>
    
</Window>
